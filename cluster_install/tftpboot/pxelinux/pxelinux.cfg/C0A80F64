
default install
prompt 1
timeout 10
display display.msg

label localboot
        LOCALBOOT 0

label install

        KERNEL /boot/x86_64/vmlinuz
        APPEND initrd=/boot/x86_64/initrd.img ip=192.168.15.100 netmask=255.255.255.0 gateway=192.168.15.250 dns=8.8.8.8 BOOTIF=ac:1f:6b:b2:da:f4 inst.sshd inst.repo=http://192.168.15.250/cia-repo inst.ks=http://192.168.15.250/cia-kickstart/master.ks selinux=0 biosdevname biosdevname=0 net.ifnames=0 selinux=0 text 
        IPAPPEND 2
