#!/bin/bash 

if grep -q -w CIA.CUDA /proc/cmdline ; then exit  

rpm -ivh  $CIA_ROOT/cia_utils/RPMS/$(uname -i)/cuda/*.rpm 
cp $CIA_ROOT/config/files/all/cuda /etc/init.d/

chkconfig --add cuda
chkconfig cuda on

echo "
export MANPATH=/usr/local/cuda/doc/man:$MANPATH
export PATH=/usr/local/cuda/bin:\$PATH
export LD_LIBRARY_PATH=/usr/local/cuda/lib64:\$LD_LIBRARY_PATH
" > /etc/profile.d/cuda.sh

else 

curl -s "$MASTER_IP/$HOSTNAME#CIA_POST:WITHOUT-CUDA####################" &>/dev/null 


fi 
